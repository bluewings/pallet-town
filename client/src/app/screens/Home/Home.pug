//- Layout
//- div
  div.container-fluid(styleName='root')
    .row
      .col-xs-12
        h1 Home
        //- InputDateRange(range='{range}',
          onChange='{this.onDateRangeChange}')
        //- Calendar(onSelect='{this.handleDateSelect.bind(this)}')

.container-fluid
  .row
    div(className='{"col-sm-" + (splitView ? 6 : 12)}')
      MapView(onRouteChange='{this.handleRouteChange}',
        frame='{nmapOptions.frame}',
        markers='{markers}',
        panoId='{nmapOptions.panoId}',
        limitTo='{nmapOptions.limitTo}',
        onPositionChange='{this.handlePositionChange}')
      h4 {this.state.location}
    .col-sm-6
      input.form-control(type='text',
        ref='{(input) => this.inputUsername = input}',
        onChange='{this.handleValueChange.bind(this, "username")}')
      input.form-control(type='password',
        ref='{(input) => this.inputPassword = input}',
        onChange='{this.handleValueChange.bind(this, "password")}')
      button.btn.btn-default.btn-block(type='button',
        onClick='{this.handleLoginClick}') LOGIN
      button.btn.btn-default(type='button',
        onClick='{this.handleButtonClick.bind(this, "getinventory")}') INVENTORY
      button.btn.btn-default(type='button',
        onClick='{this.handleButtonClick.bind(this, "getmapobjects")}') MAP OBJECT
      JSONTree(data='{mapObjects}')
      .row
        .col-sm-6
          h4 items
          table.table
            tbody
              tr(@repeat='items as item')
                td {item.item_id}
                td 
                  img(src='{"/svg/" + item.img}', width='32')
                td {item.name}
                td {item.count}
        .col-sm-6
          h4 pokemons
          table.table
            tbody
              tr(@repeat='pokemons as pokemon, i')
                //- td {item.item_id}
                //- td 
                //-   img(src='{"/svg/" + item.img}', width='32')
                td {i}
                td {pokemon.name}
                td {pokemon.nickname}
                //- td {item.count}
          //- JSONTree(data='{inventory.pokemon}')
      //- JSONTree(data='{inventory}')
      


